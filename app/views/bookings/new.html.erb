<h2>Flight Details</h2>
<br>

<p>
    <strong><%= @flight.departure_airport.name %></strong>
    to
    <strong><%= @flight.arrival_airport.name %></strong><br><br>
    <div>Flight_id: <%= @flight.id %></div>
    <%= @flight.departure_date %><br><br>
    Departure Time:
    <%= @flight.departure_time %><br><br>
</p>

<br><br>

<%= form_with model: @booking do |form| %>
    <%= form.hidden_field :flight_id, value: @flight.id %>
    <h2>Enter Passenger Details</h2>
    <%= form.fields_for :passengers do |passengers_form| %>
        <%= passengers_form.label :name %>
        <%= passengers_form.text_field :name %>

        <%= passengers_form.label :email %>
        <%= passengers_form.email_field :email %>
        <br><br>
    <% end %>
    <%= form.submit "Book the Flight!" %>
<% end %>